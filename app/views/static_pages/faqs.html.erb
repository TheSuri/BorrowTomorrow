<% faqs = [{id: 1, question: 'Will I know who I am doing business with?', answer: ''},
              {id: 2, question: '', answer: ''},
              {id: 3, question: '', answer: ''},
              {id: 4, question: '', answer: ''},
              {id: 5, question: '', answer: ''}] 
%>
<div id="accordion" class="panel-group col-xs-10 col-xs-offset-1">
    <% faqs.each do |faq| %>
        <!-- PANEL -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <a href="#faq<%= faq[:id] %>" data-parent="#accordion" data-toggle="collapse"><%= faq[:question] %></a>
                </div>
            </div>
            <div id="faq<%= faq[:id] %>" class="panel-collapse collapse <%= faq[:id] == 1 ? 'in' : '' %> ">
                <div class="panel-body">
                  <%= faq[:answer] %>
                </div>
            </div>
        </div>
        <!-- PANEL -->
    <% end %>
</div> 